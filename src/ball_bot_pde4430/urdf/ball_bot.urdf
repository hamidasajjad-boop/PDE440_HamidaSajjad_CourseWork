<?xml version="1.0"?>
<robot name="ball_bot">

  <!-- ========================== -->
  <!-- MATERIALS -->
  <!-- ========================== -->
  <material name="green"><color rgba="0 1 0 1"/></material>
  <material name="black"><color rgba="0 0 0 1"/></material>
  <material name="grey"><color rgba="0.7 0.7 0.7 1"/></material>
  <material name="dark_grey"><color rgba="0.2 0.2 0.2 1"/></material>

  <!-- ========================== -->
  <!-- BASE LINK -->
  <!-- ========================== -->
  <link name="base_link">
    <visual>
      <!-- height 0.10, so center at z=0.05 -->
      <origin xyz="0 0 0.05"/>
      <geometry>
        <box size="0.25 0.25 0.10"/>
      </geometry>
      <material name="green"/>
    </visual>
    <collision>
      <origin xyz="0 0 0.05"/>
      <geometry>
        <box size="0.25 0.25 0.10"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <origin xyz="0 0 0.05"/>
      <inertia ixx="0.02" ixy="0" ixz="0"
               iyy="0.02" iyz="0" izz="0.02"/>
    </inertial>
  </link>

  <!-- ========================== -->
  <!-- REAR LEFT WHEEL -->
  <!-- ========================== -->
  <link name="rear_left_wheel">
    <visual>
      <!-- cylinder axis along Y (rpy=90deg about X) -->
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.04" length="0.03"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.04" length="0.03"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.00016" ixy="0" ixz="0"
               iyy="0.00016" iyz="0" izz="0.000625"/>
    </inertial>
  </link>

  <!-- wheel center z = wheel radius = 0.04 (on ground) -->
  <joint name="rear_left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="rear_left_wheel"/>
    <origin xyz="-0.05 0.12 0.04"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- ========================== -->
  <!-- REAR RIGHT WHEEL -->
  <!-- ========================== -->
  <link name="rear_right_wheel">
    <visual>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.04" length="0.03"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.04" length="0.03"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.00016" ixy="0" ixz="0"
               iyy="0.00016" iyz="0" izz="0.000625"/>
    </inertial>
  </link>

  <joint name="rear_right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="rear_right_wheel"/>
    <origin xyz="-0.05 -0.12 0.04"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- ========================== -->
  <!-- FRONT CASTER -->
  <!-- ========================== -->
  <link name="front_caster">
    <visual>
      <geometry>
        <sphere radius="0.025"/>
      </geometry>
      <material name="grey"/>
    </visual>
    <collision>
      <geometry>
        <sphere radius="0.025"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.05"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.000009" ixy="0" ixz="0"
               iyy="0.000009" iyz="0" izz="0.000009"/>
    </inertial>
  </link>

  <!-- caster radius = 0.025 â†’ center at z=0.025 -->
  <joint name="front_caster_joint" type="fixed">
    <parent link="base_link"/>
    <child link="front_caster"/>
    <origin xyz="0.09 0 0.025"/>
  </joint>

  <!-- ========================== -->
  <!-- LEFT FLAP / FINGER -->
  <!-- ========================== -->
  <link name="left_finger">
    <visual>
      <origin xyz="0.125 0.035 0.05"/>
      <geometry>
        <box size="0.12 0.02 0.06"/>
      </geometry>
      <material name="grey"/>
    </visual>
    <collision>
      <origin xyz="0.125 0.035 0.05"/>
      <geometry>
        <box size="0.12 0.02 0.06"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.05"/>
      <origin xyz="0.125 0.035 0.05"/>
      <inertia ixx="0.00002" ixy="0" ixz="0"
               iyy="0.00002" iyz="0" izz="0.000025"/>
    </inertial>
  </link>

  <joint name="left_finger_joint" type="revolute">
    <parent link="base_link"/>
    <child link="left_finger"/>
    <origin xyz="0.125 0.035 0.05"/>
    <axis xyz="0 0 -1"/>
    <limit lower="0" upper="1.2" effort="10" velocity="1.5"/>
  </joint>

  <!-- ========================== -->
  <!-- RIGHT FLAP / FINGER -->
  <!-- ========================== -->
  <link name="right_finger">
    <visual>
      <origin xyz="0.125 -0.035 0.05"/>
      <geometry>
        <box size="0.12 0.02 0.06"/>
      </geometry>
      <material name="grey"/>
    </visual>
    <collision>
      <origin xyz="0.125 -0.035 0.05"/>
      <geometry>
        <box size="0.12 0.02 0.06"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.05"/>
      <origin xyz="0.125 -0.035 0.05"/>
      <inertia ixx="0.00002" ixy="0" ixz="0"
               iyy="0.00002" iyz="0" izz="0.000025"/>
    </inertial>
  </link>

  <joint name="right_finger_joint" type="revolute">
    <parent link="base_link"/>
    <child link="right_finger"/>
    <origin xyz="0.125 -0.035 0.05"/>
    <axis xyz="0 0 1"/>
    <limit lower="0" upper="1.2" effort="10" velocity="1.5"/>
  </joint>

  <!-- ========================== -->
  <!-- LIDAR -->
  <!-- ========================== -->
  <link name="lidar_link">
    <visual>
      <origin xyz="0 0 0"/>
      <geometry>
        <cylinder radius="0.05" length="0.02"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <origin xyz="0 0 0"/>
      <geometry>
        <cylinder radius="0.03" length="0.02"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.05"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.000005" ixy="0" ixz="0"
               iyy="0.000005" iyz="0" izz="0.000008"/>
    </inertial>
  </link>

  <!-- mount lidar on top of base -->
  <joint name="lidar_joint" type="fixed">
    <parent link="base_link"/>
    <child link="lidar_link"/>
    <origin xyz="0 0 0.10"/>
  </joint>

  <!-- ========================== -->
  <!-- GAZEBO PLUGINS -->
  <!-- ========================== -->

  <!-- Diff drive plugin: connects cmd_vel <-> wheel joints -->
  <gazebo>
    <plugin name="ball_bot_diff_drive" filename="libgazebo_ros_diff_drive.so">
      <ros>
        <namespace>/ball_bot</namespace>
        <remapping>cmd_vel:=cmd_vel</remapping>
        <remapping>odom:=odom</remapping>
      </ros>

      <update_rate>50</update_rate>

      <left_joint>rear_left_wheel_joint</left_joint>
      <right_joint>rear_right_wheel_joint</right_joint>

      <wheel_separation>0.24</wheel_separation>
      <wheel_radius>0.04</wheel_radius>

      <cmd_vel_topic>cmd_vel</cmd_vel_topic>
      <odom_topic>odom</odom_topic>

      <publish_odom>true</publish_odom>
      <publish_tf>true</publish_tf>

      <use_stamped_vel>false</use_stamped_vel>
    </plugin>
  </gazebo>

  <!-- Lidar sensor on lidar_link -->
  <gazebo reference="lidar_link">
    <sensor type="ray" name="ball_bot_laser">
      <pose>0 0 0 0 0 0</pose>
      <visualize>true</visualize>
      <update_rate>20</update_rate>

      <ray>
        <scan>
          <horizontal>
            <samples>720</samples>
            <resolution>1</resolution>
            <min_angle>-1.5708</min_angle> <!-- -90 deg -->
            <max_angle>1.5708</max_angle>  <!-- +90 deg -->
          </horizontal>
        </scan>
        <range>
          <min>0.10</min>
          <max>5.0</max>
          <resolution>0.01</resolution>
        </range>
      </ray>

      <plugin name="ball_bot_laser_plugin" filename="libgazebo_ros_ray_sensor.so">
        <ros>
          <namespace>/ball_bot</namespace>
          <remapping>scan:=scan</remapping>
        </ros>
        <output_type>sensor_msgs/LaserScan</output_type>
        <frame_name>lidar_link</frame_name>
      </plugin>
    </sensor>
  </gazebo>

</robot>
