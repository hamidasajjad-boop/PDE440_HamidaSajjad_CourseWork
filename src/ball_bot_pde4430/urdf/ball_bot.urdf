<?xml version="1.0"?>
<robot name="ball_bot">

  <!-- ========================== -->
  <!-- MATERIALS -->
  <!-- ========================== -->
  <material name="green"><color rgba="0 1 0 1"/></material>
  <material name="black"><color rgba="0 0 0 1"/></material>
  <material name="grey"><color rgba="0.7 0.7 0.7 1"/></material>

  <!-- ========================== -->
  <!-- BASE LINK -->
  <!-- ========================== -->
  <link name="base_link">
    <visual>
      <origin xyz="0 0 0.05"/>
      <geometry><box size="0.25 0.25 0.10"/></geometry>
      <material name="green"/>
    </visual>

    <collision>
      <origin xyz="0 0 0.05"/>
      <geometry><box size="0.25 0.25 0.10"/></geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0.05"/>
      <mass value="1.0"/>
      <inertia ixx="0.02" ixy="0" ixz="0"
               iyy="0.02" iyz="0" izz="0.02"/>
    </inertial>
  </link>

  <!-- ========================== -->
  <!-- REAR LEFT WHEEL -->
  <!-- ========================== -->
  <link name="rear_left_wheel">
    <visual>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry><cylinder radius="0.04" length="0.03"/></geometry>
      <material name="black"/>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry><cylinder radius="0.04" length="0.03"/></geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="0.00016" ixy="0" ixz="0"
               iyy="0.00016" iyz="0" izz="0.000625"/>
    </inertial>
  </link>

  <joint name="rear_left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="rear_left_wheel"/>
    <origin xyz="-0.05 0.12 0.04"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- ========================== -->
  <!-- REAR RIGHT WHEEL -->
  <!-- ========================== -->
  <link name="rear_right_wheel">
    <visual>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry><cylinder radius="0.04" length="0.03"/></geometry>
      <material name="black"/>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry><cylinder radius="0.04" length="0.03"/></geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="0.1"/>
      <inertia ixx="0.00016" ixy="0" ixz="0"
               iyy="0.00016" iyz="0" izz="0.000625"/>
    </inertial>
  </link>

  <joint name="rear_right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="rear_right_wheel"/>
    <origin xyz="-0.05 -0.12 0.04"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- ========================== -->
  <!-- FRONT CASTER -->
  <!-- ========================== -->
  <link name="front_caster">
    <visual>
      <geometry><sphere radius="0.025"/></geometry>
      <material name="grey"/>
    </visual>

    <collision>
      <geometry><sphere radius="0.025"/></geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="0.05"/>
      <inertia ixx="0.000009" ixy="0" ixz="0"
               iyy="0.000009" iyz="0" izz="0.000009"/>
    </inertial>
  </link>

  <joint name="front_caster_joint" type="fixed">
    <parent link="base_link"/>
    <child link="front_caster"/>
    <origin xyz="0.09 0 0.025"/>
  </joint>

  <!-- ========================== -->
  <!-- LEFT FLAP -->
  <!-- ========================== -->
  <link name="left_finger">
    <visual>
      <origin xyz="0.125 0.035 0.05"/>
      <geometry><box size="0.12 0.02 0.06"/></geometry>
      <material name="grey"/>
    </visual>

    <collision>
      <origin xyz="0.125 0.035 0.05"/>
      <geometry><box size="0.12 0.02 0.06"/></geometry>
    </collision>

    <inertial>
      <origin xyz="0.125 0.035 0.05"/>
      <mass value="0.05"/>
      <inertia ixx="0.00002" ixy="0" ixz="0"
               iyy="0.00002" iyz="0" izz="0.000025"/>
    </inertial>
  </link>

  <joint name="left_finger_joint" type="revolute">
    <parent link="base_link"/>
    <child link="left_finger"/>
    <origin xyz="0.125 0.035 0.05"/>
    <axis xyz="0 0 -1"/>
    <limit lower="0" upper="1.2" effort="10" velocity="1.5"/>
  </joint>

  <!-- ========================== -->
  <!-- RIGHT FLAP -->
  <!-- ========================== -->
  <link name="right_finger">
    <visual>
      <origin xyz="0.125 -0.035 0.05"/>
      <geometry><box size="0.12 0.02 0.06"/></geometry>
      <material name="grey"/>
    </visual>

    <collision>
      <origin xyz="0.125 -0.035 0.05"/>
      <geometry><box size="0.12 0.02 0.06"/></geometry>
    </collision>

    <inertial>
      <origin xyz="0.125 -0.035 0.05"/>
      <mass value="0.05"/>
      <inertia ixx="0.00002" ixy="0" ixz="0"
               iyy="0.00002" iyz="0" izz="0.000025"/>
    </inertial>
  </link>

  <joint name="right_finger_joint" type="revolute">
    <parent link="base_link"/>
    <child link="right_finger"/>
    <origin xyz="0.125 -0.035 0.05"/>
    <axis xyz="0 0 1"/>
    <limit lower="0" upper="1.2" effort="10" velocity="1.5"/>
  </joint>

  <!-- ========================== -->
  <!-- LIDAR -->
  <!-- ========================== -->
  <link name="lidar_link">
    <visual>
      <origin xyz="0 0 0"/>
      <geometry><cylinder radius="0.05" length="0.02"/></geometry>
      <material name="black"/>
    </visual>

    <collision>
      <origin xyz="0 0 0"/>
      <geometry><cylinder radius="0.03" length="0.02"/></geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="0.05"/>
      <inertia ixx="0.000005" ixy="0" ixz="0"
               iyy="0.000005" iyz="0" izz="0.000008"/>
    </inertial>
  </link>

  <joint name="lidar_joint" type="fixed">
    <parent link="base_link"/>
    <child link="lidar_link"/>
    <origin xyz="0 0 0.10"/>
  </joint>

  <!-- ========================== -->
  <!-- GAZEBO HARMONIC PLUGINS -->
  <!-- ========================== -->

  <!-- Diff drive -->
  <gazebo>
    <plugin filename="libignition-gazebo-ros2-diff-drive-system.so"
            name="ignition::gazebo::systems::DiffDrive">
      <left_joint>rear_left_wheel_joint</left_joint>
      <right_joint>rear_right_wheel_joint</right_joint>

      <wheel_separation>0.24</wheel_separation>
      <wheel_radius>0.04</wheel_radius>

      <topic>cmd_vel</topic>
      <odom_topic>odom</odom_topic>
      <frame_id>odom</frame_id>
      <child_frame_id>base_link</child_frame_id>
    </plugin>
  </gazebo>

  <!-- Lidar sensor -->
  <gazebo reference="lidar_link">
    <sensor name="lidar" type="gpu_lidar">
      <update_rate>20</update_rate>

      <ray>
        <scan>
          <horizontal>
            <samples>720</samples>
            <min_angle>-1.5708</min_angle>
            <max_angle>1.5708</max_angle>
          </horizontal>
        </scan>

        <range>
          <min>0.1</min>
          <max>5.0</max>
        </range>
      </ray>

      <plugin filename="libignition-gazebo-ros2-laser-system.so"
              name="ignition::gazebo::systems::Laser">
        <topic>scan</topic>
      </plugin>
    </sensor>
  </gazebo>

</robot>
